@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student List</title>
</head>
<body>
    <h1>Student List</h1>
    <table id="studentTable">
        <thead>
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            <!-- Table rows will be populated dynamically using JavaScript -->
        </tbody>
    </table>

    <button type="button" onclick="goToAdd()">Go to Add Page</button>

    <script>
        // Retrieve student list from local storage
        var studentList = JSON.parse(localStorage.getItem("studentList")) || [];

        // Display students in the table
        var tableBody = document.querySelector("#studentTable tbody");
        studentList.forEach(function (student, index) {
            var row = "<tr id='row" + index + "'>" +
                "<td>" + student.FirstName + "</td>" +
                "<td>" + student.LastName + "</td>" +
                "<td><button onclick='editStudent(" + index + ")'>Edit</button></td>" +
                "</tr>";
            tableBody.innerHTML += row;
        });

        function editStudent(index) {
            // Retrieve the selected student from the list
            var selectedStudent = studentList[index];

            // Store the selected student in session storage for use in the edit page
            sessionStorage.setItem("selectedStudent", JSON.stringify(selectedStudent));

            // Redirect to the edit page
            window.location.href = "/edit";
        }

        // Function to navigate to the add page
        function goToAdd() {
            window.location.href = "/add";
        }
    </script>
</body>
</html>