@page
@model WebApplication2.Pages.AddEditModel
@{
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Add Student</title>
    <link rel="stylesheet" href="~/css/Add.css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</head>

<body class="text-center">
    <div class="contains">
<h1>Add/Edit Student</h1>

        <form method="post">
    <div>
        <label for="firstName">First Name:</label>
        <input type="text" id="firstName" name="firstName" value="@Model.Student.FirstName" />
    </div>

    <div>
        <label for="lastName">Last Name:</label>
        <input type="text" id="lastName" name="lastName" value="@Model.Student.LastName" />
    </div>

    <div>
        <label for="gender">Gender:</label>
        <input type="text" id="gender" name="gender" value="@Model.Student.Gender" />
    </div>

    <div>
        <label for="dateOfBirth">Date of Birth:</label>
        <input type="date" id="dateOfBirth" name="dateOfBirth" value="@Model.Student.DateOfBirth.ToString("yyyy-MM-dd")" />
    </div>

    <div>
        <label for="age">Age:</label>
        <input type="number" id="age" name="age" value="@Model.Student.Age" />
    </div>

    <div>
        <label for="class">Class:</label>
        <input type="text" id="class" name="class" value="@Model.Student.Class" />
    </div>

    <div>
        <label for="address">Address:</label>
        <input type="text" id="address" name="address" value="@Model.Student.Address" />
    </div>

        
            <button type="submit" style="color : black; background-color : steelblue">Submit</button>

    @if (Model.Student.Id > 0)
    {
                <button type="button" onclick="deleteStudent()" style="color : red; background-color : lightgray">Delete</button>
    }
            <input type="hidden" id="confirm" name="confirm" value="false" />
        </form>
</div>
</body>
<script>
   
    function deleteStudent() {
        var confirmDelete = confirm("Are you sure you want to delete this student?");
        console.log("Cinfirm delete"+confirmDelete);
        if (confirmDelete) {
            // Set a hidden field to indicate deletion
            document.getElementById("deleteFlag").value = "true";
                                     
            document.forms[0].submit();
        }
    }
</script>

